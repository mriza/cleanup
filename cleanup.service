[Unit]
Description=Directory Cleanup Service
After=network.target

[Service]
Type=simple
Environment=VIRTUAL_ENV=/opt/cleanup/venv
Environment=PATH=/opt/cleanup/venv/bin:/usr/bin:/bin
ExecStart=/opt/cleanup/venv/bin/python /opt/cleanup/cleanup.py --config /opt/cleanup/config.yaml
Restart=on-failure
User=youruser
Group=yourgroup
WorkingDirectory=/opt/cleanup

[Install]
WantedBy=multi-user.target
