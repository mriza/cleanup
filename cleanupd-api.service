[Unit]
Description=FastAPI Backend for Cleanup Service (API)
After=network.target

[Service]
Type=simple
User=cleanupd
Group=cleanupd
Environment=VIRTUAL_ENV=/opt/cleanup/venv
Environment=PATH=/opt/cleanup/venv/bin:/usr/bin:/bin
ExecStart=/opt/cleanup/venv/bin/python /opt/cleanup/api.py
Restart=on-failure
WorkingDirectory=/opt/cleanup
RuntimeDirectory=cleanupd

[Install]
WantedBy=multi-user.target